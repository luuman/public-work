{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/**/*",
    "src/types/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": false,
    "types": ["electron-vite/node"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/main/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  }
}
